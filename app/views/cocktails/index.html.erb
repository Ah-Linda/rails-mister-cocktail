<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Our cocktails</h1>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% end %>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <%= link_to "Create a new cocktail", new_cocktail_path %>
    </div>
  </div>
</div>
